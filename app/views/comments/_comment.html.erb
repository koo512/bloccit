 <div class="row">
   <div class="col-md-8">
       <div class="media">
         <div class="media-body">
          <%= comment.body %>
          <p>
            <small>
              <%= image_tag(comment.user.avatar.tiny.url) %>
              submitted <%= time_ago_in_words(comment.created_at) %> ago by
              <%= comment.user.name %>
            </small>
          </p>
         </div>
       </div>
   </div>
 </div>
 <br>