<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
    <%=link_to "Edit", edit_topic_post_path(@topic, @post),class: 'btn btn-warning' %>
    <%=link_to "Summary", topic_post_summary_path(@topic, @post, @post.summary),class: 'btn btn-success' %>
    <% end %>
  </div>
</div>